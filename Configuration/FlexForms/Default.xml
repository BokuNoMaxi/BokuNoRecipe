<T3DataStructure>
    <sheets>
        <!--
			################################
			  SHEET General Settings
			################################
		-->
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>
                        LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_tab.settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <!-- PID Detail Page -->
                    <settings.detailPid>
                        <TCEforms>
                            <label>
                                LLL:EXT:bokunorecipe/Resources/Private/Language/locallang_db.xlf:detailPid</label>
                            <config>
                                <type>group</type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                            </config>
                        </TCEforms>
                    </settings.detailPid>

                    <!-- PID List Page -->
                    <settings.listPid>
                        <TCEforms>
                            <label>
                                LLL:EXT:bokunorecipe/Resources/Private/Language/locallang_db.xlf:listPid</label>
                            <config>
                                <type>group</type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                            </config>
                        </TCEforms>
                    </settings.listPid>

                    <!-- PID Back -->
                    <settings.backPid>
                        <TCEforms>
                            <label>
                                LLL:EXT:bokunorecipe/Resources/Private/Language/locallang_db.xlf:backPid</label>
                            <config>
                                <type>group</type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                            </config>
                        </TCEforms>
                    </settings.backPid>
                    <!-- Hide pagination -->
                    <settings.hidePagination>
                        <TCEforms>
                            <label>
                                LLL:EXT:bokunorecipe/Resources/Private/Language/locallang_db.xlf:hidePagination</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.hidePagination>

                    <settings.list.paginate.itemsPerPage>
                        <TCEforms>
                            <label>
                                LLL:EXT:bokunorecipe/Resources/Private/Language/locallang_db.xlf:itemsPerPage</label>
                            <config>
                                <type>input</type>
                                <size>2</size>
                            </config>
                        </TCEforms>
                    </settings.list.paginate.itemsPerPage>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>
